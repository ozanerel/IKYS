@using Microsoft.AspNetCore.Identity
@using IK.ENTITIES.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark p-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">IKYS</a>
            <ul class="navbar-nav flex-row ms-auto">
                <li class="nav-item me-3">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Paneli</a>
                    }
                    else if (User.IsInRole("Employee"))
                    {
                        <a class="nav-link text-white" asp-area="Employee" asp-controller="Home" asp-action="Index">Çalışan Paneli</a>
                    }
                </li>
                <li class="nav-item">
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                        <button class="btn btn-outline-light btn-sm">Çıkış</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
