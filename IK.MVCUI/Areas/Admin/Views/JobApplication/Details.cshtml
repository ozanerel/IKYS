@using IK.ENTITIES.Enums
@model IK.MVCUI.Areas.Admin.Models.PageVms.JobApplicationDetailsPageVm

@{
	ViewData["Title"] = "Başvuru Detay";
	Layout = "~/Views/Shared/_AreaLayout.cshtml";
}

<h3>@Model.JobApplication.ApplicantName Başvurusu</h3>

@if (TempData["Success"] != null)
{
	<div class="alert alert-success mt-3">
		@TempData["Success"]
	</div>
}

@if (TempData["Error"] != null)
{
	<div class="alert alert-danger mt-3">
		@TempData["Error"]
	</div>
}

<!-- BAŞVURU BİLGİLERİ -->
<div class="card mt-3">
	<div class="card-body">
		<p><strong>Email:</strong> @Model.JobApplication.Email</p>
		<p><strong>Telefon:</strong> @Model.JobApplication.PhoneNumber</p>
		<p><strong>Pozisyon:</strong> @Model.JobApplication.Position?.PositionName</p>
		<p><strong>Başvuru Tarihi:</strong> @Model.JobApplication.CreatedDate.ToShortDateString()</p>

		<p>
			<strong>Durum:</strong>
			@if (Model.JobApplication.ApplicationStatus == ApplicationStatus.Pending)
			{
				<span class="badge bg-warning">Beklemede</span>
			}
			else if (Model.JobApplication.ApplicationStatus == ApplicationStatus.Approved)
			{
				<span class="badge bg-success">Onaylandı</span>
			}
			else
			{
				<span class="badge bg-danger">Reddedildi</span>
			}
		</p>

		<p>
			<strong>CV:</strong>
			<a href="http://localhost:5171/cv/@Model.JobApplication.CVFilePath" target="_blank" class="btn btn-secondary btn-sm">
				CV Görüntüle
			</a>
		</p>
	</div>
</div>

<!-- SADECE PENDING İKEN GÖZÜKECEK ONAY FORMU -->
@if (Model.JobApplication.ApplicationStatus == ApplicationStatus.Pending)
{
	<form asp-area="Admin" asp-controller="JobApplication" asp-action="Approve" method="post" class="card mt-4">
		<div class="card-header bg-success text-white">
			İşe Alım Onayı
		</div>

		<div class="card-body">
			<input type="hidden" name="JobApplicationId" value="@Model.JobApplication.Id" />

			<div class="mb-3">
				<label class="form-label">TCKN</label>
				<input name="TCKN" class="form-control" required />
			</div>

			<div class="mb-3">
				<label class="form-label">Kullanıcı Adı</label>
				<input name="UserName" class="form-control" required />
			</div>

			<div class="mb-3">
				<label class="form-label">Doğum Tarihi</label>
				<input name="BirthDate" type="date" class="form-control" required />
			</div>

			<div class="mb-3">
				<label class="form-label">Maaş</label>
				<input name="Salary" type="number" class="form-control" required />
			</div>

			<div class="mb-3">
				<label>Şube</label>
				<select name="BranchId" class="form-select" required>
					@foreach (var b in (SelectList)ViewBag.Branches)
					{
						<option value="@b.Value">@b.Text</option>
					}
				</select>
			</div>

			@* <div class="mb-3">
				<label>Departman</label>
				<select asp-for="HireVm.DepartmanId" asp-items="ViewBag.Departmants" class="form-select" required></select>
			</div> *@

			<div class="mb-3">
				<label>Departman</label>
				<select name="DepartmanId" class="form-select" required>
					@foreach (var d in (SelectList)ViewBag.Departmants)
					{
						<option value="@d.Value">@d.Text</option>
					}
				</select>
			</div>
			

			<div class="mb-3">
				<label class="form-label">Cinsiyet</label>
				<select name="Gender" class="form-select" required>
					<option value="">Seçiniz</option>
					@foreach (Gender g in Enum.GetValues(typeof(Gender)))
					{
						<option value="@g">@g</option>
					}
				</select>
			</div>

			<div class="mb-3">
				<label class="form-label">Medeni Hal</label>
				<select name="MaritalStatus" class="form-select" required>
					<option value="">Seçiniz</option>
					@foreach (MaritalStatus m in Enum.GetValues(typeof(MaritalStatus)))
					{
						<option value="@m">@m</option>
					}
				</select>
			</div>

			<div class="mb-3">
				<label class="form-label">Çalışma Tipi</label>
				<select name="JobType" class="form-select" required>
					@foreach (JobType j in Enum.GetValues(typeof(JobType)))
					{
						<option value="@j">@j</option>
					}
				</select>
			</div>

			<button type="submit" class="btn btn-success">
				Onayla ve Çalışan Oluştur
			</button>

			<a asp-area="Admin" asp-controller="JobApplication" asp-action="Reject"
			   asp-route-id="@Model.JobApplication.Id"
			   class="btn btn-danger ms-2">
				Reddet
			</a>
		</div>
	</form>
}

<!-- ONAYLANDI / REDDEDİLDİ MESAJI -->
@if (Model.JobApplication.ApplicationStatus == ApplicationStatus.Approved)
{
	<div class="alert alert-success mt-4">
		Bu başvuru başarıyla onaylandı ve çalışan oluşturuldu.
	</div>
}

@if (Model.JobApplication.ApplicationStatus == ApplicationStatus.Rejected)
{
	<div class="alert alert-danger mt-4">
		Bu başvuru reddedildi.
	</div>
}
