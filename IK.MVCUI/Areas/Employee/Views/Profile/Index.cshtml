@model IK.ENTITIES.Models.Employee
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}

<h2>Profil Bilgilerim</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="text-center mb-4">
        <img src="@(Model.ImagePath ?? "/images/default-profile.png")"
             class="img-thumbnail rounded-circle"
             style="width:180px;height:180px;cursor:pointer;"
             id="profileImagePreview" />

        <input type="file" id="profileImageInput" name="ProfilePhoto" accept="image/*" style="display:none;" />
    </div>

    <script>
        document.getElementById("profileImagePreview").onclick = function () {
            document.getElementById("profileImageInput").click();
        };

        document.getElementById("profileImageInput").onchange = function (e) {
            var output = document.getElementById("profileImagePreview");
            output.src = URL.createObjectURL(e.target.files[0]);
        };
    </script>

    <div class="mb-3">
        <label>Ad Soyad:</label>
        <input class="form-control" value="@Model.FirstName @Model.LastName" disabled />
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <input class="form-control" value="@Model.Email" disabled />
    </div>

    <div class="mb-3">
        <label>Telefon</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Adres</label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>





    